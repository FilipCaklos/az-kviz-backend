{
  "manifest_version": 3,
  "name": "A-Z Kvíz Party",
  "version": "1.0.0",
  "description": "Party mode s chatom pre A-Z kvíz",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://decko.ceskatelevize.cz/*",
    "https://junior.az-kviz.sk/*",
    "https://*.firebaseapp.com/*",
    "https://*.firebasedatabase.app/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "A-Z Kvíz Party"
  },
  "content_scripts": [
    {
      "matches": ["https://decko.ceskatelevize.cz/*", "https://junior.az-kviz.sk/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
